            <div id="contact">
                <script>
                    $(document).ready(function(){
                        $("#submit").click(function(event){
                            event.preventDefault();
                            
                            $(".error").hide();
                            var hasError = false;
                            var emailReg = /^([\w-\.]+@([\w-]+\.)+[\w-]{2,4})?$/;
                            
                            var emailFromVal = $("#email").val();
                            if (emailFromVal == '') {
                                $("#email").after('<span class="error">You forgot to enter your email address.</span>');
                                hasError = true;
                            }
                            else 
                                if (!emailReg.test(emailFromVal)) {
                                    $("#email").after('<span class="error">Enter a valid email address.</span>');
                                    hasError = true;
                                }
                            
                            var nameVal = $("#name").val();
                            if (nameVal == '') {
                                $("#name").after('<span class="error">You forgot to enter your name.</span>');
                                hasError = true;
                            }
                            
                            var messageVal = $("#message").val();
                            if (messageVal == '') {
                                $("#message").after('<span class="error">You forgot to enter your message.</span>');
                                hasError = true;
                            }
                            
                            var captchaText = $("#captcha").val();
                            if (captchaText == "4" || captchaText == "four" || parseInt(captchaText) == 4) {
                                //hasError=false;
                            }
                            else {
                                $("#captcha").after('<span class="error">Really? You didn\'t know that?</span>');
                                hasError = true;
                            }
                            
                            var typeVal = $('#type').val();
                            
                            if (hasError == false) {
                                $(this).hide();
                                $("#contactForm").append('<p>Your message is being sent. Please wait.</p>');
                                
                                $.post("message.html", {
                                    emailFrom: emailFromVal,
                                    name: nameVal,
                                    message: messageVal,
                                    type: typeVal
                                }, function(response){
                                    if (response) {
                                        $("#contactForm").hide("normal").before('<h1>Success</h1><p>Your email was sent.</p>');
                                    }
                                });
                            }
                            
                            return false;
                        });
                    });
                </script>
